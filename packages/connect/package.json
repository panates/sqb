{
  "name": "@sqb/connect",
  "description": "Multi-dialect database connection framework written with TypeScript",
  "version": "4.2.0",
  "author": "Panates",
  "contributors": [
    "Eray Hanoglu <e.hanoglu@panates.com>"
  ],
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/sqbjs/sqb.git",
    "directory": "packages/connect"
  },
  "keywords": [
    "javascript",
    "typescript",
    "sqb",
    "rdbms",
    "sql",
    "client",
    "dialect",
    "multi-dialect",
    "database",
    "oracle",
    "postgres",
    "pg",
    "mssql",
    "sqlite",
    "mysql"
  ],
  "dependencies": {
    "debug": "^4.3.4",
    "lightning-pool": "^3.1.4",
    "lodash": "^4.17.21",
    "putil-isplainobject": "^1.1.4",
    "putil-merge": "^3.8.0",
    "putil-promisify": "^1.8.5",
    "putil-taskqueue": "^2.5.4",
    "putil-varhelpers": "^1.6.4",
    "reflect-metadata": "^0.1.13",
    "strict-typed-events": "^2.2.0",
    "ts-gems": "^2.2.0"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/lodash": "^4.14.182"
  },
  "peerDependencies": {
    "@sqb/builder": "^4.1.5"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">= 16.0"
  },
  "directories": {
    "lib": "dist",
    "test": "test"
  },
  "files": [
    "LICENSE",
    "README.md",
    "dist/"
  ],
  "scripts": {
    "build": "tsc -b tsconfig-build.json",
    "prebuild": "npm run lint && npm run clean:dist",
    "postbuild": "copyfiles package.json README.md LICENSE ../../build/connect",
    "clean": "ts-cleanup -s src --all & ts-cleanup -s test",
    "clean:dist": "rimraf ../../build/connect",
    "compile": "tsc",
    "lint": "eslint src/** --no-error-on-unmatched-pattern",
    "test": "TS_NODE_PROJECT='./test/tsconfig.json' mocha -r ts-node/register -r tsconfig-paths/register --reporter spec test/**/*.spec.ts"
  }
}