{
  "extends": "../tsconfig-base.json",
  "include": ["**/*.ts"],
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": false,
    "strict": false,
    "noEmit": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@sqb/builder": ["../packages/builder/src"],
      "@sqb/connect": ["../packages/connect/src"],
      "@sqb/postgres-dialect": ["../packages/postgres-dialect/src"],
      "@sqb/sqlite-dialect": ["../packages/sqlite-dialect/src"],
      "@sqb/mssql-dialect": ["../packages/mssql-dialect/src"],
      "@sqb/oracle-dialect": ["../packages/oracle-dialect/src"],
      "@sqb/postgres": ["../packages/postgres/src"],
      "@sqb/sqlite": ["../packages/sqlite/src"],
      "@sqb/oracle": ["../packages/oracle/src"],
      "@sqb/nestjs": ["../packages/nestjs/src"]
    }
  }
}
